<ivy-module version="1.0" xmlns:extra="http://ant.apache.org/ivy/extra">

  <info organisation="jenscom" module="flatlab"/>

  <configurations>
    <conf name="main" description="Required to build"/>
    <conf name="test" description="Required for testing"/>
  </configurations>

  <dependencies>
    <dependency org="org.lwjgl" name="lwjgl" rev="3.0.0b" conf="main->default"/>

    <dependency org="org.lwjgl" name="lwjgl-platform" rev="3.0.0b" conf="main->default">
      <artifact name="lwjgl-platform" type="jar" extra:classifier="natives-linux"/>
      <artifact name="lwjgl-platform" type="jar" extra:classifier="natives-osx"/>
      <artifact name="lwjgl-platform" type="jar" extra:classifier="natives-windows"/>
    </dependency>

    <dependency org="junit" name="junit" rev="4.12" conf="test->default"/>
  </dependencies>

</ivy-module>
